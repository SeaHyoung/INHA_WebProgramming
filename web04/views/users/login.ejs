<div class="row my-5 justify-content-center">
    <!-- row 가운데 정렬: justify-content-center -->
    <div class="col-10 col-mid-6 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3><%=title%></h3>
            </div>
            <div class="card-body">
                <form name="frm">
                    <input
                        class="form-control mb-3"
                        name="email"
                        value="blue@test.com"
                    />
                    <input
                        type="password"
                        class="form-control mb-3"
                        name="pass"
                        value="12341234"
                    />
                    <button class="btn btn-primary w-100">로그인</button>
                </form>
                <div class="text-end mt-3">
                    <a href="/users/join">회원가입</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="module">
    import { app } from "/javascripts/config.js";
    import {
        getAuth,
        signInWithEmailAndPassword,
    } from "https://www.gstatic.com/firebasejs/10.13.2/firebase-auth.js";
    const auth = getAuth(app); //config.js 에서 export 한 app 을 auth로 객체 생성

    //로그인 버튼을 클릭한 경우
    $(frm).on("submit", function (e) {
        //submit=전송
        e.preventDefault(); //submit전송 안됨
        const email = $(frm.email).val();
        const pass = $(frm.pass).val();

        signInWithEmailAndPassword(auth, email, pass)
            .then((success) => {
                //success 했을때
                alert("로그인 성공");
                sessionStorage.setItem("email", email);
                sessionStorage.setItem("uid", success.user.uid);

                if (sessionStorage.getItem("target")) {
                    location.href = sessionStorage.getItem("target");
                } else {
                    location.href = "/"; //inde.ejs로 이동
                }
            })
            .catch((error) => {
                //succes 실패 했을 때
                alert("로그인 실패:" + error.message);
            });
    });
</script>
